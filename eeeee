const express = require ('express')
const app = express()
const port = 3000




app.get('/',(req, res) => {
    res.send('Hola mundo')
})

app.listen(port, () => {
    console.log('ingrese a http://localhost:3000')
})





// crear la ruta//
const express = require ('express')
const app = express()
const port = 3000

app.get('/',(req, res) => {
    res.send('Hola mundo')
})

app.listen(port, () => {
    console.log('ingrese a http://localhost:3000')
})

c//con este codigo preparas para exportar el codigo

